<!-- List of movies in your groups -->
<%= render 'lil_logo' %>
<%= render 'menu' %>

<div class=all_comments>
<center><span class=page_title>Your Movies:</span></center>

<div class=my_movies>
  <% if @my_movies.empty? %>
    <center>You have not joined any Groups yet!</center>
  <% end %>
<% @my_movies.each do |movie| %>
  <div class=movie_container>
  <span class=movie_name>
    <%= link_to movie.name, movie_path(movie) %>
  </span><br /><br />
  <span class=movie_group_names>
    Groups:
    <% movie.user_groups(@user.id).each do |group| %>
      <%= link_to group.name, group_movie_path(group, movie) %>
    <% end %>
  </span>
  </div>
<% end %>

</div>

<center><span class=page_title>Other Movies:</span></center>

<div class=other_movies>

<% @other_movies.each do |movie| %>

<div class=movie_container>
  <span class=movie_name>
    <%= link_to movie.name, movie_path(movie) %>
  </span><br /><br />
  <span class=movie_group_names>
    Groups:
    <% movie.groups.each do |group| %>
      <%= link_to group.name, group_movie_path(group, movie) %>
    <% end %>
  </span>
  </div>

<% end %>

</div>
</div>

<div class='content'>
</div>



