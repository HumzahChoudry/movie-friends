<%= form_for @user do |f| %>
  <%= f.text_field :name, placeholder: "Name", class: 'session' %><br />
  <%= f.password_field :password, placeholder: "Password", class: 'session' %><br />
  <%= f.password_field :password_confirmation, placeholder: "Password", class: 'session' %><br />
  <%= f.file_field :picture, id: :user_picture %>
  <%= f.submit "Sign Up", class: 'session'  %>
<% end %>
