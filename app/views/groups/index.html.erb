<%= render 'lil_logo' %>
<%= render 'menu' %>

<div class=all_comments>
<center><span class=page_title>Your Groups:</span></center>

<div class=my_movies>

<% if @my_groups.empty? %>
  <center>You have not joined any Groups yet!</center>
<% end %>

<% @my_groups.each do |group| %>

  <div class=movie_container>
  <span class=movie_name>
    <%= link_to group.name, group_path(group) %>
  </span><br /><br />
  <span class=movie_group_names>
    Movies:
    <% group.movies.each do |movie| %>
      <%= link_to movie.name, group_movie_path(group, movie) %>
    <% end %>
  </span>
  </div>

<% end %>

</div>

<center><span class=page_title>Other Groups:</span></center>

<div class=other_movies>

<% @all_groups.each do |group| %>

<div class=movie_container>
  <span class=movie_name>
    <%= link_to group.name, group_path(group) %>
  </span><br /><br />
  <span class=movie_group_names>
    Movies:
    <% group.movies.each do |movie| %>
      <%= link_to movie.name, group_movie_path(group, movie) %>
    <% end %>
  </span>
  </div>

<% end %>

</div>
</div>

<div class='content'>
Create a New Group:<br /><br />
<%= form_for @new_group do |f| %>
<%= f.text_field :name, placeholder: "Group Name" %><br />
<%= f.number_field :admin_id, value: @user.id, type: :hidden %><br />
<%= f.submit %>
<% end %>
</div>
