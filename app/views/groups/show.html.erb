<h1><%= @group.name %></h1>

<h3>Members</h3>
<ul>
  <% @group.users.each do |user| %>
    <li><%= link_to user.name, user_path(user.id) %></li>
  <% end %>
</ul>
<% if @group.users.include?(@user) %>
<!-- SHOW comments -->
<% else %>
<%= button_to "Join", join_group_path, params: {'group[id]' => @group.id} %>
<% end %>
